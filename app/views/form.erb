<form action="/questions/<%= question.id %>" method="post">
  <div>
    <label name="increasing">increasing?</label>
    <input type="checkbox" name="increasing" <%= "checked" if question.increasing? %>>
  </div>

  <div class>
    <label name="notes">notes</label><br>
    <textarea name="notes"><%= question.notes %></textarea>
  </div>
  <button>save</button>
</form>

<form class="search-order-form" action="/questions/<%= question.id %>/search_order" method="post">
  <div>
    <label name="search_order">search order</label>
    <select name="search_order">
      <option></option>
      <option value="top_to_bottom"
        <%= "selected" if question.search_order == "top_to_bottom" %>>
        Top to Bottom
      </option>
      <option value="bottom_to_top"
        <%= "selected" if question.search_order == "bottom_to_top" %>>
        Bottom to Top
      </option>
      <option value="random"
        <%= "selected" if question.search_order == 'random' %>>
        Random
      </option>
    </select>

  <button>save</button>
</form>
